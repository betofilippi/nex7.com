#!/bin/bash
# .githooks/post-merge - Executa apÃ³s merge/pull

echo "ğŸ”„ Post-merge hook triggered..."

# Auto-deploy para staging apÃ³s merge na main
current_branch=$(git rev-parse --abbrev-ref HEAD)
if [ "$current_branch" = "main" ]; then
    echo "ğŸš€ Auto-deploying to staging after main branch merge..."
    npm run deploy:safe || {
        echo "âŒ Auto-deploy failed. Check logs."
        exit 1
    }
    echo "âœ… Auto-deploy successful!"
fi

exit 0